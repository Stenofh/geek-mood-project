<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/txv_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="31dp"
        android:text="Post do usuario" />

    <ImageButton
        android:id="@+id/imb_lixeira"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="25dp"
        android:layout_marginTop="14dp"
        android:src="@drawable/ic_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txv_post"
        android:layout_marginTop="40dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txv_show_hein"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12 show hein"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/txv_teleze"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3 teleze" 
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/txv_comentario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 comentario" 
            android:layout_weight="1"/>

    </LinearLayout>

</RelativeLayout>
